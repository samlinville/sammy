---
import Shell from '../components/Shell.astro';

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
	};
}

const {
	content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props;
---

<Shell>
			<article>
				<!-- {heroImage && <img width={720} height={360} src={heroImage} alt="" />} -->
				<h1 class="mb-0">{title}</h1>
				<p class="text-lg mb-0">{description}</p>
				<p class="font-mono text-zinc-400 mt-2">{pubDate && <time class="mr-2">{pubDate}</time>}
					<!-- <span class="mb-2 inline-flex items-center rounded-full bg-zinc-800 px-3 py-0.5 text-sm font-medium text-zinc-300 hover:bg-zinc-700 hover:text-zinc-100 transition-colors duration-300">Google Apps Script</span>
					<span class="mb-2 inline-flex items-center rounded-full bg-zinc-800 px-3 py-0.5 text-sm font-medium text-zinc-300 hover:bg-zinc-700 hover:text-zinc-100 transition-colors duration-300">Programming</span>
					<span class="mb-2 inline-flex items-center rounded-full bg-zinc-800 px-3 py-0.5 text-sm font-medium text-zinc-300 hover:bg-zinc-700 hover:text-zinc-100 transition-colors duration-300">Javascript</span>
					<span class="mb-2 inline-flex items-center rounded-full bg-zinc-800 px-3 py-0.5 text-sm font-medium text-zinc-300 hover:bg-zinc-700 hover:text-zinc-100 transition-colors duration-300">Side projects</span>
					<span class="mb-2 inline-flex items-center rounded-full bg-zinc-800 px-3 py-0.5 text-sm font-medium text-zinc-300 hover:bg-zinc-700 hover:text-zinc-100 transition-colors duration-300">App development</span> -->
				</p>
				{
					updatedDate && (
						<div>
							Last updated on <time>{updatedDate}</time>
						</div>
					)
				}
				<hr class="mt-4" />
				<slot />
			</article>
</Shell>
